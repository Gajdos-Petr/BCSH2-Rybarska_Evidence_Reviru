<Window x:Class="Rybarska_Evidence.Views.UserControls.AddNewMember"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rybarska_Evidence.Views.UserControls"
        mc:Ignorable="d"
        Title="AddNewMember" Height="450" Width="800">
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Text="{Binding NewMemberToAdd.FirstName}"/>
        <TextBox Grid.Row="1"  Text="{Binding NewMemberToAdd.LastName}"/>
        <DatePicker  Grid.Row="2" SelectedDate="{Binding NewMemberToAdd.DateOfBirth}"/>
        <DatePicker  Grid.Row="3" SelectedDate="{Binding NewMemberToAdd.Document.License}"/>
        <TextBox Grid.Row="4"/>
        <ComboBox Grid.Row="5" ItemsSource="{Binding Permits}" SelectedItem="{Binding NewMemberToAdd.Document.TypeOfPermit}"/>
        <Button Grid.Row="6" Content="Pridat" Command="{Binding AddNewMemberCommand}"/>
    </Grid>
</Window>
